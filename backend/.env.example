# ==================== JWT CONFIGURATION ====================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# ==================== SERVER CONFIGURATION ====================
NODE_ENV=development
PORT=5000
